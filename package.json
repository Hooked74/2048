    "react-test-renderer": "^15.4.2",
    "redux-mock-store": "^1.2.1",
    "resolve-url-loader": "^1.6.0",
    "rxjs": "^5.0.0-rc.1",
    "sass": "^0.5.0",
    "sass-loader": "^4.0.2",
    "source-map": "^0.5.6",
    "source-map-support": "^0.4.3",
    "string-replace-loader": "^1.0.5",
    "style-loader": "^0.13.1",
    "ts-jest": "^19.0.2",
