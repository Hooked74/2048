  },
  "homepage": "https://github.com/Hooked74/2048#readme",
  "devDependencies": {
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "autoprefixer-loader": "^3.2.0",
    "awesome-typescript-loader": "^3.1.2",
    "chai": "^3.5.0",
    "clean-webpack-plugin": "^0.1.13",
    "codelyzer": "^1.0.0-beta.1",
