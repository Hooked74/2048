{
  "name": "2048",
  "version": "1.0.0",
  "description": "Game 2048",
  "main": "src/app/index.ts",
  "scripts": {
    "setup": "npm install && node_modules/typings/dist/bin.js install",
    "clear": "rm -rf build",
    "deploy": "npm run clear && npm run setup && webpack --progress",
    "deploy:prod": "NODE_ENV=prod npm run deploy",
    "server": "webpack-dev-server --inline --hot --progress",
    "server:prod": "NODE_ENV=prod webpack-dev-server",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
