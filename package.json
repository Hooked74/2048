  "dependencies": {
    "@types/react": "^15.0.20",
    "@types/react-dom": "^0.14.23",
    "core-decorators": "^0.14.0",
    "core-js": "^2.4.1",
    "deep-equal": "^1.0.1",
    "deep-extend": "^0.4.1",
    "normalize-scss": "^6.0.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-devtools": "^3.3.2",
